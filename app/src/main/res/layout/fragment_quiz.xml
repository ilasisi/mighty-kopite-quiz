<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/liv_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/timer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/option_button_bg"
                android:padding="14dp">

                <TextView
                    android:id="@+id/question_txt"
                    style="@style/textFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/question"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quiz_count"
                    style="@style/textFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/question_txt"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_quiz"
                    style="@style/textFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/quiz_count"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/timer"
                style="@style/textFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/option_button_bg"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:drawableEnd="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="20dp"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_question_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/timer_container"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/txt_question"
                style="@style/textFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/answer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_question_container"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/option_a"
                style="@style/textFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/option_button_bg"
                android:padding="20dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:rippleColor="@color/colorPrimary" />

            <Button
                android:id="@+id/option_b"
                style="@style/textFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/option_button_bg"
                android:padding="20dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:rippleColor="@color/colorPrimary" />

            <Button
                android:id="@+id/option_c"
                style="@style/textFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/option_button_bg"
                android:padding="20dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:rippleColor="@color/colorPrimary" />

            <Button
                android:id="@+id/option_d"
                style="@style/textFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_button_bg"
                android:padding="20dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:rippleColor="@color/colorPrimary" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>